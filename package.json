{
  "name": "ohif-viewer",
  "displayName": "OHIF Viewer",
  "description": "OHIF Viewer integrated with VSCode",
  "publisher": "kubzoey95",
  "icon": "icon.png",
  "author": {
    "name": "Jakub Belicki",
    "email": "jakubsliwice@o2.pl",
    "url": "https://github.com/kubzoey95"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kubzoey95/ohif-viewer-vscode.git"
  },
  "license": "MIT",
  "version": "1.0.6",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Visualization",
    "Data Science",
    "Other"
  ],
  "keywords": [
    "neuroimaging",
    "medical",
    "imaging",
    "neuroscience",
    "MRI",
    "CT",
    "brain",
    "tomography",
    "DICOM",
    "DCM",
    "viewer",
    "OHIF"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "dcmView",
        "displayName": "OHIF Viewer",
        "selector": [
          {
            "filenamePattern": "*.dcm"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "APP_CONFIG=$(realpath ./ohifConfig.js) esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node && npm run build-viewer",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "postinstall": "cd Viewers && yarn install",
    "build-viewer": "cd Viewers && yarn run build && cd .. && rm -rf out/viewer-dist && mkdir -p out && cp -r Viewers/platform/app/dist out/viewer-dist"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/http-server": "^0.12.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.33",
    "@types/vscode": "^1.89.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "esbuild": "^0.21.4",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dcmjs": "^0.33.0",
    "express": "^4.19.2",
    "glob": "^10.4.1",
    "helmet": "^7.1.0",
    "http-server": "^14.1.1"
  }
}
